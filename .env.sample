# SMTP server config
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username@example.com
SMTP_PASS=your_app_password_or_smtp_password

# Where to receive messages (defaults to SMTP_USER if not set)
CONTACT_TO=your_destination_email@example.com

# Auto reply to sender (optional)
# Set AUTO_REPLY=true to send an acknowledgement email back to the sender
AUTO_REPLY=false
REPLY_FROM_NAME=Ancy Portfolio
REPLY_SUBJECT=Thanks {{name}} â€” I received your message
REPLY_MESSAGE=Hi {{name}},\n\nThanks for reaching out! I've received your message and will get back to you soon.\n\nBest regards,\nAncy
